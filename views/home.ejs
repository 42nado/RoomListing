<%-include('partials/head')%>
  <body>
    <%-include('partials/navbar')%>
    <!-- Header-->
    <h1><%= listings.nameOfListing %></h1>
    <header class="bg-dark py-5">
      <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
          <h1 class="display-4 fw-bolder">WindBNB</h1>
          <p class="lead fw-normal text-white-50 mb-0">
            "Discover the world one stay at a time with Windbnb - your ultimate destination for unique and comfortable home rentals"
          </p>
        </div>
      </div>
    </header>
    <!-- Section-->
    <section class="py-5">
      <div class="container ">
        <div
          class="row "
        >
        <% for(let listing of listings) { %> 
          <div class="col-lg-4 pt-2">
            <div class="card h-100">
              <!-- Product image-->
              <img
                class="card-img-top"
                src="<%= listing.picture %> "
                alt="..."
              />
              <!-- Product details-->
              <div class="card-body p-4">
                <div class="text-center">
                  <!-- Product name-->
                  <h5 class="fw-bolder"><%= listing.nameOfListing %> </h5>
                  <!--LOcation-->
                  <h6><i><%= listing.address %>  </i> </h6>
                  <!-- Product price-->
                  <p><%= listing.createdAt %> </p>
                  <p><%= listing.price %> </p>
                  <p>Posted By : <%=  listing.nameOfOwner%> </p>
                </div>
              </div>
              <!-- Product actions-->
              <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <div class="text-center">
                  <a class="btn btn-outline-dark mt-auto" href="/home/<%= listing.id %> "
                    >See Details</a
                  >
                </div>
              </div>
            </div>
          </div>
          <% } %> 
        </div>
      </div>
    </section>
    
<%-include('partials/footer')%>

  </body>
</html>
